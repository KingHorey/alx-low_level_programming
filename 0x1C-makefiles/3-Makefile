
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

.PHONY: clean
clean:
	$(RM) *.swp
	$(RM) *~

.PHONY: oclean
oclean:
	$(RM) *.o

.PHONY: fclean
fclean:
	$(RM) *.swp
	$(RM) *~
	$(RM) ${NAME}
	$(RM) *.o

.PHONY: re
re:
	$(CC) $(SRC) -o $(NAME)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $@
