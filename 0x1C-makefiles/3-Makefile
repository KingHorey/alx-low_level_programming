.PHONY: clean

clean:
	$(RM) *.swp
	$(RM) *~

.PHONY: oclean

oclean:
	$(RM) *.o

.PHONY: fclean

fclean:
	$(RM) *.swp
	$(RM) *~
	$(RM) ${NAME}
	$(RM) *.o
.PHONY: 

all: $(NAME)

CC = gcc
SRC = *.c
OBJ = *.o
NAME = school
RM = rm -f


$(NAME): $(SRC)
	$(CC) $< -o $@

$(OBJ): $(SRC)
	$(CC) -c -o $@ $<
